{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "paths": {
      "app/*": ["src/scripts/app/*"],
      "vendor/*": ["src/scripts/vendor/*"],
      "pixi-app-wrapper": ["src/scripts/vendor/dacaher/pixi-app-wrapper"],
      "fpsmeter": ["src/scripts/vendor/darsain/fpsmeter/fpsmeter"],
      "screenfull": ["src/scripts/vendor/sindresorhus/screenfull/screenfull"],
      "eventemitter3": ["src/scripts/vendor/primus/eventemitter3"],
      "gsap": ["src/scripts/vendor/greensock/greensock-js"],
      "pixi-layers": ["src/scripts/vendor/pixijs/pixi-layers/pixi-layers"],
      "pixi-particles": ["src/scripts/vendor/pixijs/pixi-particles/pixi-particles"],
      "pixi-spine": ["src/scripts/vendor/pixijs/pixi-spine/pixi-spine"],
      "pixi-filters": ["src/scripts/vendor/pixijs/pixi-filters"],
      "@pixi/filter-*": ["src/scripts/vendor/pixijs/pixi-filters/filters/filter-*"],
      "howler": ["src/scripts/vendor/goldfire/howler.js"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/vendor",
    "**/*.spec.ts"
  ]
}